
import javax.swing.*;

import SUSSYROAD.State;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.image.BufferedImage;
import java.util.ArrayList;
import javax.imageio.ImageIO;
import java.io.IOException;
import java.io.File;






// class BTD7
public class BTD7 extends JPanel {
    JFrame frame;
    Board board;
    JPanel menuScreen;
    JButton startButton;
    JButton settingsButton;
    boolean running;
    BufferedImage background;
    int round = 0;
    
	public static enum State{
		Menu,
		Game,	
		Settings,
		Pause,
	};
	public static  State state = State.Menu;
	
    public BTD7() {
        frame = new JFrame("Tower Defense");
        frame.setSize(1250, 800);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.add(this);


        try {
            background = ImageIO.read(new File("Map.png"));  
        } catch (IOException e) {
            System.out.println("Error loading background image.");
            e.printStackTrace();
        }


        menuScreen = new JPanel();
        menuScreen.setSize(1200, 700);
        menuScreen.setLayout(new FlowLayout());


        startButton = new JButton("Start");
        settingsButton = new JButton("Settings");


        startButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
            	g.drawImage(background,0,0, this);
                menuScreen.setVisible(false);
                init();
                run();
                
            }
        });

        settingsButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                // Handle settings button click
            }
        });

        // Add buttons to menu screen
        menuScreen.add(startButton);
        menuScreen.add(settingsButton);

        // Add menu screen to frame
        frame.add(menuScreen);

        frame.setVisible(true);
    }

    public static void main(String[] args) {
        BTD7 game = new BTD7();
    }

    void init() {
        board = new Board(12,7);

    }

    void update() {
      
    }

    @Override
    public void paintComponent(Graphics g) {
        super.paintComponent(g);
        g.drawImage(background, 0, 0, this);


    }

    void run() {
        running = true;
        while (running) {
            update();
            repaint();  
        }
    }
}
